<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mareu" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornFlowerBlue</item>
        <item name="colorPrimaryVariant">@color/steelBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle">
        <item name="backgroundTint">@color/cornFlowerBlue</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="backgroundTint">@color/crimson</item>
    </style>

    <style name="cardView_detail_activity">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="textView_detail_activity">
        <item name="android:padding">16dp</item>
    </style>


</resources>